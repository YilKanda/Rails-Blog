<div class="page">
  <div class="archive">
    <article class="article">
      <h1><%= @article.title %></h1>
      <%= @article.text %>
    </article>
    <article class="article">
      <h1>Comments</h1>
      <%= render @article.comments %>
    </article>
    <article class="article">
      <h2>Add a comment:</h2>
      <%= render "comments/form" %>
    </article>
  </div>
</div>

<p>
  <%= link_to 'Back', articles_path %> <%= link_to 'Edit Article', edit_article_path(@article) %>
</p>